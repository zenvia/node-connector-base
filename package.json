{
  "name": "connector-base",
  "version": "1.0.0",
  "license": "MIT",
  "private": false,
  "author": "Zenvia",
  "scripts": {
    "start": "node ./dist/index.js",
    "start:dev": "NODE_ENV=development LOGGING_FORMATTER_DISABLED=true node ./dist/index.js",
    "test": "nyc --all mocha ./test",
    "test:coveralls": "nyc --all mocha ./test && nyc report --reporter=text-lcov | coveralls",
    "build": "rm -rf ./dist/ && tsc",
    "build:live": "NODE_ENV=development LOGGING_FORMATTER_DISABLED=true nodemon --exec ./node_modules/.bin/ts-node -- ./src/index.ts",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "lint:fix": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "typedoc": "typedoc --disableOutputCheck --out docs src"
  },
  "engines": {
    "node": ">=24",
    "npm": ">=11"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/zenvia/node-connector-base.git"
  },
  "bugs": {
    "url": "https://github.com/zenvia/node-connector-base/issues"
  },
  "dependencies": {
    "@zenvia/logger": "1.6.1",
    "bluebird": "^3.7.2",
    "config": "^4.1.1",
    "express": "^5.2.1",
    "express-winston": "^4.2.0",
    "js-yaml": "^4.1.1",
    "kafka-node": "^5.0.0",
    "moment": "^2.30.1",
    "request": "^2.88.2",
    "request-promise": "^4.2.6",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/chai": "^4.3.20",
    "@types/chai-as-promised": "^7.1.8",
    "@types/config": "^3.3.5",
    "@types/express": "^5.0.6",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.10.1",
    "@types/sinon-chai": "^3.2.12",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^11.0.0",
    "@typescript-eslint/eslint-plugin": "^8.49.0",
    "@typescript-eslint/parser": "^8.49.0",
    "chai": "^4.5.0",
    "chai-as-promised": "^7.1.2",
    "coveralls": "^3.1.1",
    "eslint": "^9.39.1",
    "globals": "^16.5.0",
    "mocha": "^11.7.5",
    "nock": "^14.0.10",
    "nodemon": "^3.1.11",
    "nyc": "^17.1.0",
    "sinon": "^21.0.0",
    "sinon-chai": "^3.7.0",
    "supertest": "^7.1.4",
    "ts-node": "^10.9.2",
    "typedoc": "^0.28.15",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.49.0"
  },
  "nyc": {
    "cache": false,
    "extension": [
      ".ts"
    ],
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "**/*.d.ts",
      "src/index.ts"
    ],
    "reporter": [
      "text",
      "lcov"
    ],
    "sourceMap": true,
    "instrument": true,
    "all": true
  }
}
