{
  "compilerOptions": {
    "outDir": "dist",
    "sourceMap": true,
    "allowJs": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ES2020",
    "resolveJsonModule": true,
    "skipLibCheck": true,

    // Strict Configurations
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
  },
  "include": [
    "src/**/*",
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "paths": {
    "@services/*": ["src/services/*"]
  },
}
